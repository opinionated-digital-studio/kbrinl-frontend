<div class="kbrinl-warning-text {{- ' ' + params.classes if params.classes}}"
  {%- for attribute, value in params.attributes %} {{attribute}}="{{value}}"{% endfor -%}
  >
  <span class="kbrinl-warning-text__icon" aria-hidden="true">!</span>
  <strong class="kbrinl-warning-text__text">
    <span class="kbrinl-warning-text__assistive">{{ params.iconFallbackText }}</span>
    {{ params.html | safe if params.html else params.text }}
  </strong>
</div>
